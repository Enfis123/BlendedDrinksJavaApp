<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.FruitBlendVendor.view.MainController"
            stylesheets="@../../../styles/styles.css">
    <center>
        <VBox spacing="15" alignment="CENTER">

            <Label text="🍹 Welcome to Fruit Blend Vendor! 🍹"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>

            <Button text="📋 List Inventory" fx:id="listInventoryButton" minWidth="250" styleClass="button-main"/>
            <Button text="🥤 Sell a Drink" fx:id="sellDrinkButton" minWidth="250" styleClass="button-main"/>
            <Button text="💰 Show Revenue" fx:id="showRevenueButton" minWidth="250" styleClass="button-main"/>
            <Button text="📊 Show Sales Report" fx:id="showReportButton" minWidth="250" styleClass="button-main"/>
            <Button text="🚪 Exit" fx:id="exitButton" minWidth="250" styleClass="button-exit"/>
        </VBox>
    </center>

    <bottom>
        <Label fx:id="statusLabel" text="Ready" style="-fx-font-size: 16px; -fx-text-fill: #666666;"/>
    </bottom>

    <left>
        <TextArea fx:id="outputArea" prefHeight="200" prefWidth="300" wrapText="true"
                  styleClass="output-area" />
    </left>
</BorderPane>

